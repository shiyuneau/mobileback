<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sy.mobileback.accessdb.mapper.ManagerDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.sy.mobileback.accessdb.domain.ManagerEntity" id="managerMap">
        <result property="guid" column="GUID"/>
        <result property="username" column="UserName"/>
        <result property="password" column="Password"/>
        <result property="type" column="Type"/>
        <result property="status" column="Status"/>
        <result property="name" column="Name"/>
        <result property="mail" column="Mail"/>
        <result property="mobile" column="Mobile"/>
        <result property="loginip" column="LoginIP"/>
        <result property="logintime" column="LoginTime"/>
        <result property="deleted" column="Deleted"/>
    </resultMap>

    <insert id="managerBatchInsert" parameterType="java.util.List">
        insert into manager  (
                    GUID,
                    UserName,
                    Password,
                    Type,
                    Status,
                    Name,
                    Mail,
                    Mobile,
                    LoginIP,
                    LoginTime,
                    Deleted
                )
        values
        <foreach collection="list" item="item" separator=",">
            (
                            #{item.guid},
                            #{item.username},
                            #{item.password},
                            #{item.type},
                            #{item.status},
                            #{item.name},
                            #{item.mail},
                            #{item.mobile},
                            #{item.loginip},
                            #{item.logintime},
                            #{item.deleted}
                        )
        </foreach>
    </insert>

    <select id="usernamePasswordMatch" resultType="java.lang.String">
        select GUID from manager where UserName = #{username} and Password = #{password}
    </select>
</mapper>